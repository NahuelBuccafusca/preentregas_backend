<div>
  {{#if user}}
    <a
      href="/carts/{{user.cart}}"
      id="imgCart"
    >
      {{#if cart.length}}
        <p >{{cart.length}}</p>
      {{else}}
        <p></p>
      {{/if}}
      shopping_cart
    </a>
  {{else}}
  {{/if}}
  <section >
    <h3>{{product.title}}</h3>
    <div >
      <div>
        <p>Descripci√≥n: {{product.description}}</p>
        <p>Precio: $ {{product.price}}.-</p>
        <p>Categoria: {{product.category}}</p>
        <div>
          {{#if user}}
            <form
              action="/carts/{{user.cart}}/products/{{product._id}}"
              method="POST"
            ><button>Agregar </button></form>
